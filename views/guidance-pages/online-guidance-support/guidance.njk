{% extends 'guidanceLayout.njk' %}
{% set pageTitleName = i18n.pages.onlineSupportPages.guidancePage.pageTitle %}
{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <div class="guidance">
            <img src="/assets/images/banner.png" alt="banner">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <h3 class="govuk-heading-m">{{ i18n.common.contents }}</h3>
                    {{ navigation() }}
                </div>

                <div class="govuk-grid-column-two-thirds">
                    <h2 class="govuk-heading-l">{{ i18n.pages.onlineSupportPages.guidancePage.title }}</h2>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.guidancePage.info }}</h2>
                    <img src="/assets/images/overview.png" alt="banner">
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.guidancePage.para }}</p>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.guidancePage.text }}</p>
                    <ul class="govuk-list govuk-list--bullet">
                        {% for text in i18n.pages.onlineSupportPages.guidancePage.bullets %}
                            <li class="govuk-body">{{ text.title }}</li>
                            <p class="govuk-body">{{ text.text }}</p>
                            <p>{{ text.pdf  | safe }}</p>
                        {% endfor %}
                    </ul>
                    {{  backForward(paths.common.offlineProcesses,paths.common.howToHelp) }}
                </div>
            </div>
            </div>
        </main>
    </div>
{% endblock %}
