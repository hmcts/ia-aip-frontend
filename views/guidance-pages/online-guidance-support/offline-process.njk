{% extends 'guidanceLayout.njk' %}
{% set pageTitleName = i18n.pages.onlineSupportPages.offlineProcessesPage.pageTitle %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <img src="/assets/images/banner.png" alt="banner">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <h3 class="govuk-heading-m">{{ i18n.common.contents }}</h3>
                    <ul class="govuk-list">
                        <li>
                            <a href="{{ paths.common.whatIsIt }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.whatIsThisService }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.gettingStarted }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.gettingStarted }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.fourStages }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.fourStages }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.notifications }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.notifications }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.documents }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.documents }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.offlineProcesses }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.offlineProcesses }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.guidance }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.guidance }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.howToHelp }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.howToHelp }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.giveFeedback }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.howToGiveFeedback }}</a>
                        </li>
                    </ul>
                </div>

                <div class="govuk-grid-column-two-thirds">
                    <h2 class="govuk-heading-l">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.title | safe }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.text | safe }}</p>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.askForMoreTimeTitle | safe }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.afmtText | safe }}</p>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.withdrawTitle | safe }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.withdrawText | safe }}</p>
                    <ul class="govuk-list govuk-list--bullet">
                        {% for text in i18n.pages.onlineSupportPages.offlineProcessesPage.bullets %}
                            <li class="govuk-body">{{ text | safe }}</li>
                        {% endfor %}
                    </ul>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.withdrawTextTwo | safe }}</p>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.askForJudgeTitle | safe }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.offlineProcessesPage.askForJudgeText | safe }}</p>
                    {{  backForward(paths.common.documents,paths.common.guidance) | safe }}

                </div>
            </div>

        </main>
    </div>
{% endblock %}
