{% extends 'layout.njk' %}
{% from "components/progress-bar.njk" import progressBar with context %}
{% set pageTitleName = i18n.pages.overviewPage.title %}

{% block content %}
  <div class="govuk-width-container">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds ">
        <h1 class="govuk-heading-l govuk-!-margin-0 govuk-!-padding-bottom-6 banner-line">{{ name }}</h1>
      </div>
    </div>
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">
        {{ progressBar(stages) }}
        <div id="doThisNextTitle">
          {% if applicationNextStep.cta %}
            <h2>{{ i18n.pages.overviewPage.doThisNext.toDo }}</h2>
          {% else %}
            <h2>{{ i18n.pages.overviewPage.doThisNext.nothingToDo }}</h2>
          {% endif %}
        </div>
        {% if saved %}
          <div class="saved-banner">
            <p class="govuk-!-padding-left-3">{{ i18n.pages.overviewPage.answersBeenSaved }}</p>
          </div>
        {% endif %}
        <div class="overview-banner govuk-!-margin-top-0">
          {% for paragraph in applicationNextStep.descriptionParagraphs %}
            <p class="govuk-body">{{ paragraph | eval | safe }}</p>
          {% endfor %}
          {% if applicationNextStep.info %}
            <p class="govuk-body"><span  class='govuk-body govuk-!-font-weight-bold'> {{ applicationNextStep.info.title }}</span> </p>
            <p class="govuk-body">{{ applicationNextStep.info.url | safe }}</p>
          {% endif %}
          {% if applicationNextStep.cta %}
            {{ govukButton({
              text: i18n.common.buttons.continue,
              href: applicationNextStep.cta
            }) }}
          {% endif %}
        </div>
      </div>
      <div class="govuk-grid-column-one-third">
        <div class="contact-us-component">
          <span class="govuk-!-padding-top-2 govuk-heading-s">{{ i18n.pages.overviewPage.contactUs }}</span>
          <p>{{ i18n.pages.overviewPage.askAQuestion }}</p>
          <p class='govuk-body govuk-!-margin-bottom-0 govuk-!-margin-top-0'>{{ i18n.pages.overviewPage.telephone  }}</p>
          <p class='govuk-body  govuk-!-margin-top-0'>{{ i18n.pages.overviewPage.telephoneNumber }}</p>
          <p class='govuk-body govuk-!-margin-bottom-0 govuk-!-margin-top-0'>{{ i18n.pages.overviewPage.email | safe }}</p>
          <a href='mailto:customer.service@justice.gov.uk' class='govuk-link--no-visited-state govuk-body govuk-!-margin-top-0'>{{ i18n.pages.overviewPage.emailLink }}</a>
          <p class='govuk-body govuk-!-margin-top-3 govuk-body govuk-!-margin-bottom-0'>{{ i18n.pages.overviewPage.time }}</p>
          <a href='https://www.gov.uk/call-charges' target='_blank' rel="noopener noreferrer"
             class='govuk-link--no-visited-state govuk-body govuk-!-margin-top-0'>{{ i18n.pages.overviewPage.charges }}</a>
          <p class="govuk-!-margin-top-0">{{ i18n.pages.overviewPage.newWindow }}</p>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
