{
  "name": "ia-aip-frontend",
  "description": "Immigration & Asylum appeal frontend",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_PATH=. node build/main.js",
    "build": "webpack --config webpack/webpack.prod.js",
    "dev": "yarn genCert && cross-env NODE_ENV=development DEFAULT_LAUNCH_DARKLY_FLAG=false nodemon app/server.ts",
    "dev:mock": "concurrently \"yarn mock-ccd\" \"yarn mock-idam\" \"yarn mock-postcode\" \"yarn mock-dm-store\" \"yarn mock-s2s\" \"IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 ADDRESS_LOOKUP_URL=http://localhost:20002 DOC_MANAGEMENT_URL=http://localhost:20003 CASE_DOCUMENT_AM_URL=http://localhost:20003 S2S_URL=http://localhost:20004 yarn dev\"",
    "mock-ccd": "dyson test/mock/ccd/services/ 20000",
    "mock-idam": "dyson test/mock/idam/services/ 20001",
    "mock-postcode": "dyson test/mock/postcode-lookup/services/ 20002",
    "mock-dm-store": "dyson test/mock/document-management-store/services/ 20003",
    "mock-s2s": "dyson test/mock/s2s/services/ 20004",
    "lint": "tslint --project .",
    "fortifyScan": "./test/java/gradlew -p test/java fortifyScan",
    "test": "yarn genCert && yarn test:unit && yarn codecept:functional",
    "test:accessibility": "rm -rf functional-output/accessibility && IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 NODE_PATH=. TS_NODE_PROJECT=tsconfig.json NODE_ENV=development USE_REDIS=false mocha test/accessibility/*.ts --exit",
    "test:unit": "rm -rf test/coverage && cross-env NODE_ENV=test DEFAULT_LAUNCH_DARKLY_FLAG=false nyc mocha --recursive \"test/unit/**/*.test.ts\" --recursive \"app/**/*.test.ts\" --recursive \"client/**/*.test.ts\" --reporter mochawesome",
    "test:unit-file": "rm -rf test/coverage && cross-env NODE_ENV=test DEFAULT_LAUNCH_DARKLY_FLAG=false nyc mocha ",
    "test:coverage": "nyc report",
    "test:a11y": "yarn test:accessibility",
    "sonar-scan": "sonar-scanner",
    "test:smoke": "yarn codecept:e2e --grep @smoke --reporter mochawesome",
    "test:smoke-local": "yarn codecept:e2e-local -g @smoke",
    "test:nightly": "yarn codecept:e2e -g @nightly-test --reporter mocha-multi",
    "test:fullfunctional": "yarn test:nightly",
    "test:functional": "yarn test:e2e",
    "test:e2e": "yarn codecept:e2e -g @e2e",
    "test:all": "yarn lint && yarn test && yarn test:a11y && yarn test:smoke && yarn test:functional && yarn test:e2e",
    "test:crossbrowser": "cross-env NODE_ENV=ci IDAM_API_URL=https://idam-api.aat.platform.hmcts.net codeceptjs run-multiple -c codecept.crossbrowser.js -g @crossbrowser --all --steps",
    "codecept:functional": "TEST_URL=https://localhost:3000 USE_REDIS=false IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 ADDRESS_LOOKUP_URL=http://localhost:20002 DOC_MANAGEMENT_URL=http://localhost:20003 CASE_DOCUMENT_AM_URL=http://localhost:20003 cross-env NODE_ENV=test DEFAULT_LAUNCH_DARKLY_FLAG=true codeceptjs run -c codecept.functional.ts --verbose",
    "codecept:e2e": "NODE_OPTIONS=--max-old-space-size=8192 IDAM_API_URL=https://idam-api.aat.platform.hmcts.net codeceptjs run --features -c codecept.e2e.js",
    "codecept:e2e-local": "IDAM_API_URL=http://localhost:5000 codeceptjs run -c codecept.e2e.js --verbose --debug",
    "setupUser": "cross-env NODE_ENV=e2e-local codeceptjs run -c codecept.setup.js --verbose --debug | grep ia_citizen",
    "test:mutation": "NODE_CONFIG_DIR=./config DEFAULT_LAUNCH_DARKLY_FLAG=false stryker run stryker.node.conf.js",
    "test:mutation-local": "NODE_CONFIG_DIR=./config stryker run stryker.node.conf.js",
    "genCert": "mkdir -p keys && openssl req -x509 -newkey rsa:4096 -keyout keys/server.key -out keys/server.cert -sha256 -days 365 -nodes -subj \"/C=XX/ST=StateName/L=CityName/O=CompanyName/OU=CompanySectionName/CN=CommonNameOrHostname\""
  },
