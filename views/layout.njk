{% extends "govuk/template.njk" %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% set serviceName = i18n.serviceName %}
{% set serviceUrl = i18n.serviceUrl %}

{% macro errorSummary(errors) %}
    {%  if errors %}
        {{ govukErrorSummary({
            titleText: "There is a problem",
            errorList: errors.errorList
        }) }}
    {% endif %}
{% endmacro %}

{% macro dateInput(label, id, value='')  %}
    {{ govukInput({
        label: {
            text: label
        },
        id: id,
        name: id,
        classes: "govuk-input--width-3",
        value: value,
        errorMessage: errors.fieldErrors[id]
    }) }}
{% endmacro %}

{% macro saveButtons() %}
    {{ govukButton({
        text: "Save and continue"
    }) }} 

    {{ govukButton({
        text: "Save for later",
        name: "saveForLater",
        value: "saveForLater",
        classes: "govuk-button--secondary"
    }) }}
{% endmacro %}

{% macro input(label, id, value='') %}
    {{ govukInput({
        label: {
            text: label
        },
        id: id,
        name: id,
        classes: "govuk-input--width-20",
        value: value,
        errorMessage: errors.fieldErrors[id]
    }) }}
{% endmacro %}

{%  macro contactUs() %}
    {{ govukDetails({
        summaryText: "Contact us for help",
        html: "<div><h2>Telephone</h2><p>0330 123 1234</p><h2>Email</h2><p>support@hmcts.net</p></div>"
    }) }}
{% endmacro %}

{% macro contactUsErrorLink() %}
    <a class="govuk-link" href="#">Contact the {{i18n.serviceName}} Helpline</a> if you need to make changes to your application or speak to someone about your tax credits.
{% endmacro %}

{% block head %}
  <link href="/main.css" rel="stylesheet" />
{% endblock %}

{% block pageTitle %}
  {{ pageTitleName }} - {{ i18n.serviceName }} - {{ i18n.provider }}
{% endblock %}

{% block header %}
    <div id="cookie-banner" >
        <p class="govuk-width-container">{{ i18n.cookieBanner.content | safe }}</p>
    </div>
    {% if not hideSignOut %}
        {{ govukHeader({
            homepageUrl: "#",
            serviceName:  serviceName,
            serviceUrl: serviceUrl,
            containerClasses: "govuk-width-container",
            navigationClasses: "sign-out",
            navigation: [
                {
                    href: "/logout",
                    text: "Sign out",
                    active: true
                }
            ]
        }) }}
    {% else %}
        {{ govukHeader({
            homepageUrl: "#",
            containerClasses: "govuk-width-container",
            serviceName: serviceName,
            serviceUrl: serviceUrl
        }) }}
    {% endif %}

{% endblock %}

{% block beforeContent %}
    {% if not hideBackLink %}
        {{ govukBackLink({
            text: "Back",
            href: previousPage,
            attributes : { onclick: "history.go(-1); return false;" }
        }) }}
    {% endif %}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  <script src="/all.js"></script>

{% endblock %}
