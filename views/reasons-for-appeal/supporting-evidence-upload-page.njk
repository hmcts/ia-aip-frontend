{% set pageTitleName = i18n.pages.reasonsForAppealUpload.title %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/file-upload/macro.njk" import govukFileUpload %}
{% from "components/evidence-list.njk" import evidenceList with context %}


{% extends "layout.njk" %}

{% block content %}
  {% if errorList %}
    {{ govukErrorSummary({
      titleText: i18n.error.summary.title,
      descriptionText: i18n.error.summary.descriptionText,
      errorList: errorList
    }) }}
  {% endif %}

  <form action="{{ paths.reasonsForAppeal.supportingEvidenceUpload }}?_csrf={{ csrfToken }}" method="post"
        enctype="multipart/form-data">
    {% call govukFieldset({
      legend: {
        text: i18n.pages.reasonsForAppealUpload.heading,
        classes: "govuk-fieldset__legend--xl",
        isPageHeading: true
      }
    }) %}
      <p class="govuk-body">{{ i18n.pages.reasonsForAppealUpload.uploadInfo }}</p>
      <a class="govuk-link" href="{{ paths.guidancePages.evidenceToSupportAppeal }}">{{ i18n.pages.reasonsForAppealUpload.findOutMore }}</a>

      <div class="govuk-inset-text">
        {{ govukFileUpload({
          id: "file-upload",
          name: "file-upload",
          label: {
            html: i18n.pages.reasonsForAppealUpload.uploadFile | safe
          },
          errorMessage: {
            text: errorList[0].text
          } if (errorList)
        }) }}

        {{ govukButton({
          text: i18n.common.buttons.uploadFile,
          name: 'uploadFile',
          classes: "govuk-button--secondary",
          attributes: {
            formaction: paths.reasonsForAppeal.supportingEvidenceUploadFile + '?_csrf=' + csrfToken,
            formEnctype: 'multipart/form-data'
          }
        }) }}
      </div>
      {{ evidenceList(evidences, evidenceCTA) }}

      <div class="panel-background">
        <h2 class="govuk-heading-s">{{ i18n.pages.reasonsForAppealUpload.needMoreTime }}</h2>
        <ul>
          <li>{{ i18n.pages.reasonsForAppealUpload.evidence | safe }}</li>
        </ul>
      </div>
    {% endcall %}
  </form>
  <form action="{{ paths.reasonsForAppeal.supportingEvidenceSubmit }}" method="post">
      <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    {{ saveButtons() }}
  </form>

  {{ contactUs() }}

{% endblock %}
