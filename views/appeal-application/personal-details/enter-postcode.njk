{% extends '../../layout.njk' %}
{% set pageTitleName = i18n.pages.enterPostcode.title %}

{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}

{% block content %}
  {% if errorList %}
    {{ govukErrorSummary({
      titleText: i18n.error.summary.title,
      descriptionText: i18n.error.summary.descriptionText,
      errorList: errorList
    }) }}
  {% endif %}

  <form action="/personal-details/enter-postcode" method="post">
    {% call govukFieldset({
      legend: {
        text: i18n.pages.enterPostcode.heading,
        classes: "govuk-fieldset__legend--xl",
        isPageHeading: true
      }
    }) %}
      {{ govukInput({
        label: {
          text: i18n.pages.enterPostcode.hint
        },
        classes: "govuk-!-width-one-half",
        id: "postcode",
        name: "postcode",
        value: postcode,
        errorMessage: {
          text:  error['postcode'].text
        } if error['postcode']
      }) }}
      <div class="govuk-form-group">
        <a href="/personal-details/enter-address">{{ i18n.pages.enterPostcode.manualAddressLink }}</a>
      </div>
      {{ govukButton({
        text: 'Find address',
        name: "buttton",
        value: "submit"
      }) }}
    {% endcall %}
  </form>

  {{ contactUs() }}
{% endblock %}

