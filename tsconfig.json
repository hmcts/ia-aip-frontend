{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2022",

    "module": "commonjs",
    "moduleResolution": "node",

    "lib": [
      "ES2022",
      "dom"
    ],

    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "types": ["node", "express", "multer"],

    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  }
}
