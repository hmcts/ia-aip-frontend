{% set pageTitleName = i18n.pages.DOB.title %}
{% extends 'layout.njk'  %}
{% from "components/date-component.njk" import dateInput %}

{%  block content %}
  {% if errorList %}
    {{ govukErrorSummary({
      titleText: i18n.error.summary.title,
      descriptionText: i18n.error.summary.descriptionText,
      errorList: errorList
    }) 
    }}
  {% endif %}
  <h1 class="govuk-heading-xl">{{ i18n.pages.DOB.heading }}</h1>
  <span class="govuk-caption-m">{{ i18n.pages.DOB.hint  }}</span>
  <form method="post" action="/date-of-birth" type="submit">
    {{ 
      dateInput(
        i18n.appealApplication.homeOfficeLetterSent.dateTitle,
        i18n.appealApplication.homeOfficeLetterSent.dateHint,
        errors
      )
    }}
      
    {{ saveButtons() }}
  </form>
  {{ contactUs() }}
{% endblock  %}
