{% set pageTitleName = i18n.pages.index.title %}
{% extends "layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}

{% block content %}
  {% if errors %}
    {{ govukErrorSummary({
      titleText: i18n.error.summary.title,
      descriptionText: i18n.error.summary.descriptionText,
      errorList: errorList
    })
    }}
  {% endif %}
  <h1 class="govuk-heading-l">{{ i18n.appealApplication.homeOfficePage.title }}</h1>

  <p>{{ i18n.appealApplication.homeOfficePage.description }}</p>

  <img
          src="/assets/images/home_office_ref_number.png"
          class="govuk-!-padding-bottom-4 govuk-!-padding-top-2"
          alt="{{  i18n.appealApplication.homeOfficePage.refImageAltText }}"
  />

  <form action="/home-office/details" method="post">
    {{ govukInput({
      label: {
        text: "Home Office reference number"
      },
      classes: "govuk-input--width-20",
      id: "homeOfficeRefNumber",
      name: "homeOfficeRefNumber",
      value: homeOfficeRefNumber,
      errorMessage: {
        text:  errors['homeOfficeRefNumber'].text
      } if errors['homeOfficeRefNumber']
    }) }}

    {{ govukButton({
      text: "Save and continue"
    }) }}
  </form>

{% endblock %}
