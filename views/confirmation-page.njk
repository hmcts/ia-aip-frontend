{% extends './layout.njk' %}
{% set pageTitleName = i18n.pages.successPage.title %}



{% block content %}
 {% from "govuk/components/panel/macro.njk" import govukPanel %}
   {%  if  late %}
    {{ govukPanel({
        titleText: i18n.pages.successPage.outOfTime.panel,
        classes: mainClasses
    }) }}
    {%  else %}
        {{ govukPanel({
            titleText: i18n.pages.successPage.inTime.panel ,
            classes: mainClasses
        }) }}
    {%  endif %}
    <h2 class="govuk-heading-m">{{i18n.pages.successPage.whatHappensNext}}</h2>
    <ul class="govuk-list govuk-list--bullet">
        <li>{{ i18n.pages.successPage.info }}</li>
        {% if late %}
        <li>A case worker will contact you to by <strong>{{ date(days) }}</strong> to tell you if you can continue with your appeal and what to do next</li>
        {%  else %}
        <li>A Tribunal case worker will contact you to by <strong>{{ date(days) }}</strong> to tell you what to do next</li>
        {%  endif %}
        <li>If you havent heard from us by <strong>{{ date(days) }}</strong> call us on <b>0300 123 1711</b> or email customer.service@justice.gov.uk</li>
    </ul>
    <div class="panel-background">
        <h2 class="govuk-heading-m">{{ i18n.pages.successPage.thingsYouCanDo }}</h2>
        <ul class="govuk-list govuk-list--bullet">
            <a class="govuk-link govuk-link--no-visited-state" href="#"> <li>{{ i18n.pages.successPage.readMore }}</li></a>
            <a class="govuk-link govuk-link--no-visited-state" href="#"><li>{{ i18n.pages.successPage.findOutMore }}</li></a>
        </ul>
     </div>
    </br>
    {{ govukButton({
        text: i18n.pages.successPage.seeProgress,
        href: "#"
    }) }}
    {{ contactUs() }}
{% endblock %}
