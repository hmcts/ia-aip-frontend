{% macro bold(text) %}
  <span  class='govuk-body govuk-!-font-weight-bold'>  {{ text }} </span>
{% endmacro %}

{% macro parentheses(text) %}
  ( {{ text }} )
{% endmacro %}

{% macro addMultipleHintsText(hints) %}
  {% for hint in hints %}
    <span id="waste-hint" class="govuk-hint">{{ hint }}</span>
  {% endfor %}
{% endmacro %}
