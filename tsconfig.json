{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true, // do not check types in node_modules folder
    "target": "esnext",
    "typeRoots": [
      "**/types/**.d.ts",
      "./node_modules/@types"
    ]
  }
}
