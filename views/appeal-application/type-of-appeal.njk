{% set pageTitleName = i18n.pages.appealType.header %}
{% extends "layout.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% block content %}

  {% if errorList %}
    {{ govukErrorSummary({
      titleText: i18n.validationErrors.errorSummary,
      errorList: errorList
    }) }}
  {% endif %}
  {% set options = [] %}
  {% for item in types %}
    {% set examples =
      govukDetails({
      summaryText: i18n.pages.appealType.exampleSummaryText + item.name,
      html: item.examples
    }) %}

    {% set options = (options.push(
      {
        value: item.value,
        html: item.title,
        checked: item.checked,
        hint: { html: examples }
      }), options) %}
  {% endfor %}

  <form action="/type-of-appeal" method="post">
    {{ govukRadios({
      idPrefix: "appealType",
      id: "appealType",
      name: "appealType",
      fieldset: {
        legend: {
          text:  i18n.pages.appealType.header,
          isPageHeading: true,
          classes: "govuk-fieldset__legend--xl"
        }
      },
      hint: {
        html:  i18n.pages.appealType.pageHint
      },
      errorMessage: {
        text: errors['appealType'].text
      } if errors['appealType'],
      items: options
    }) }}

    {{ saveButtons() }}
  </form>

  {{ contactUs() }}

{% endblock %}
