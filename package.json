{
  "name": "ia-aip-frontend",
  "description": "Immigration & Asylum appeal frontend",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_PATH=. node build/main.js",
    "build": "webpack --config webpack/webpack.prod.js",
    "dev": "cross-env NODE_ENV=development nodemon app/server.ts",
    "dev:mock": "concurrently \"yarn mock-ccd\" \"yarn mock-idam\" \"yarn mock-postcode\" \"yarn mock-dm-store\" \"yarn mock-s2s\" \"IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 ADDRESS_LOOKUP_URL=http://localhost:20002 DOC_MANAGEMENT_URL=http://localhost:20003 S2S_URL=http://localhost:20004 yarn dev\"",
    "mock-ccd": "dyson test/mock/ccd/services/ 20000",
    "mock-idam": "dyson test/mock/idam/services/ 20001",
    "mock-postcode": "dyson test/mock/postcode-lookup/services/ 20002",
    "mock-dm-store": "dyson test/mock/document-management-store/services/ 20003",
    "mock-s2s": "dyson test/mock/s2s/services/ 20004",
    "lint": "tslint --project .",
    "test": "yarn test:unit && yarn codecept:functional",
    "test:accessibility": "rm -rf functional-output/accessibility && IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 NODE_PATH=. TS_NODE_PROJECT=tsconfig.json NODE_ENV=development USE_REDIS=false mocha test/accessibility/*.ts --exit",
    "test:unit": "rm -rf test/coverage && cross-env NODE_ENV=test nyc mocha --recursive \"test/unit/**/*.test.ts\" --recursive \"app/**/*.test.ts\" --recursive \"client/**/*.test.ts\"",
    "test:coverage": "nyc report",
    "test:a11y": "yarn test:accessibility",
    "sonar-scan": "sonar-scanner",
    "test:smoke": "yarn codecept:e2e -g @smoke",
    "test:smoke-local": "yarn codecept:e2e-local -g @smoke",
    "test:functional": "yarn test:e2e",
    "test:fullfunctional": "yarn test:functional",
    "test:e2e": "yarn codecept:e2e -g @e2e",
    "test:all": "yarn lint && yarn test && yarn test:a11y && yarn test:smoke && yarn test:functional && yarn test:e2e",
    "test:crossbrowser": "cross-env NODE_ENV=ci IDAM_API_URL=https://idam-api.aat.platform.hmcts.net codeceptjs run-multiple -c test/crossbrowser/saucelabs.config.js --all --steps",
    "codecept:functional": "TEST_URL=https://localhost:3000 USE_REDIS=false IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 ADDRESS_LOOKUP_URL=http://localhost:20002 DOC_MANAGEMENT_URL=http://localhost:20003 cross-env NODE_ENV=test codeceptjs run -c codecept.functional.js --verbose",
    "codecept:e2e": "IDAM_API_URL=https://idam-api.aat.platform.hmcts.net codeceptjs run -c codecept.e2e.js --verbose --debug",
    "codecept:e2e-local": "TEST_URL=https://localhost:3000 IDAM_API_URL=http://localhost:5000 cross-env NODE_ENV=e2e-local codeceptjs run -c codecept.e2e.js --verbose --debug",
    "setupUser": "cross-env NODE_ENV=e2e-local codeceptjs run -c codecept.setup.js --verbose --debug | grep ia_citizen",
    "test:mutation": "echo 'not implemented'",
    "test:mutation-local": "NODE_CONFIG_DIR=./config stryker run stryker.node.conf.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "@hmcts/ia-idam-express-middleware": "^6.7.5",
    "@hmcts/os-places-client": "^1.1.7",
    "@hmcts/properties-volume": "^0.0.11",
    "applicationinsights": "^2.1.8",
    "codeceptjs": "^3.1.3",
    "config": "^3.3.6",
    "connect-redis": "^6.0.0",
    "cookie-parser": "^1.4.5",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "dompurify": "^2.3.3",
    "dyson": "^4.1.0",
    "expect-ct": "^1.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "google-libphonenumber": "^3.2.25",
    "govuk-frontend": "^3.14.0",
    "graceful-fs": "^4.2.8",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "i18n": "^0.13.3",
    "joi": "^17.4.2",
    "jsdom": "^18.0.0",
    "jsdom-global": "^3.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.4.2",
    "moment": "^2.29.1",
    "multer": "^1.4.3",
    "nl2br": "^0.0.3",
    "nunjucks": "^3.2.3",
    "otp": "^1.0.1",
    "redis": "^3.1.2",
    "request-promise": "^4.2.6",
    "webdriverio": "^7.14.1",
    "webpack": "^5.58.1",
    "webpack-dev-middleware": "^5.2.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@stryker-mutator/api": "^5.4.1",
    "@stryker-mutator/core": "^5.4.1",
    "@stryker-mutator/html-reporter": "^3.1.0",
    "@stryker-mutator/karma-runner": "^5.4.1",
    "@stryker-mutator/mocha-runner": "^5.4.1",
    "@stryker-mutator/typescript": "^4.0.0",
    "@types/chai": "^4.2.22",
    "@types/config": "^0.0.39",
    "@types/connect-redis": "^0.0.17",
    "@types/cucumber": "^7.0.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/joi": "^17.2.3",
    "@types/lodash": "^4.14.175",
    "@types/mocha": "^9.0.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.10.5",
    "@types/nunjucks": "^3.2.0",
    "@types/puppeteer": "^5.4.4",
    "@types/sinon": "^10.0.4",
    "@types/sinon-chai": "^3.2.5",
    "@types/webpack-dev-middleware": "^5.0.2",
    "babel-loader": "^8.2.2",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "concurrently": "^6.3.0",
    "css-loader": "^6.4.0",
    "cucumber": "^7.0.0-rc.0",
    "dotenv-extended": "^2.9.0",
    "husky": "^7.0.2",
