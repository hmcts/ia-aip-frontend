{
  "name": "ia-aip-frontend",
  "description": "Immigration & Asylum appeal frontend",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_PATH=. node build/main.js",
    "build": "webpack --config webpack/webpack.prod.js",
    "dev": "cross-env NODE_ENV=development nodemon app/server.ts",
    "dev:mock": "concurrently \"yarn mock-ccd\" \"yarn mock-idam\" \"yarn mock-postcode\" \"yarn mock-dm-store\" \"yarn mock-s2s\" \"IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 ADDRESS_LOOKUP_URL=http://localhost:20002 DOC_MANAGEMENT_URL=http://localhost:20003 S2S_URL=http://localhost:20004 yarn dev\"",
    "mock-ccd": "dyson test/mock/ccd/services/ 20000",
    "mock-idam": "dyson test/mock/idam/services/ 20001",
    "mock-postcode": "dyson test/mock/postcode-lookup/services/ 20002",
    "mock-dm-store": "dyson test/mock/document-management-store/services/ 20003",
    "mock-s2s": "dyson test/mock/s2s/services/ 20004",
    "lint": "tslint --project .",
    "test": "yarn test:unit && yarn codecept:functional",
    "test:accessibility": "IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 NODE_PATH=. TS_NODE_PROJECT=tsconfig.json NODE_ENV=development USE_REDDIS=false mocha test/accessibility/*.ts --exit",
    "test:unit": "rm -rf test/coverage && cross-env NODE_ENV=test nyc mocha --recursive \"test/unit/**/*.test.ts\"",
    "test:coverage": "nyc report",
    "test:a11y": "yarn test:accessibility",
    "sonar-scan": "sonar-scanner",
    "test:smoke": "NODE_ENV=test mocha test/smoke/**/*.test.ts --exit",
    "test:functional": "yarn codecept:e2e",
    "test:all": "yarn lint && yarn test && yarn test:a11y && yarn test:smoke && yarn test:functional",
    "test:audit": "./bin/run-yarn-audit.sh -f yarn-audit-known-issues",
    "test:crossbrowser": "IDAM_API_URL=http://idam-api.aat.platform.hmcts.net codeceptjs run-multiple -c codecept.crossbrowser.js --all --verbose",
    "codecept:functional": "TEST_URL=https://localhost:3000 USE_REDIS=false IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 ADDRESS_LOOKUP_URL=http://localhost:20002 DOC_MANAGEMENT_URL=http://localhost:20003 cross-env NODE_ENV=test codeceptjs run -c codecept.functional.js --verbose",
    "codecept:e2e": "IDAM_API_URL=http://idam-api.aat.platform.hmcts.net codeceptjs run -c codecept.e2e.js --verbose --debug"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "@hapi/joi": "^17.1.0",
    "@hmcts/ia-idam-express-middleware": "^6.7.3",
    "@hmcts/os-places-client": "1.0.6",
    "@hmcts/properties-volume": "^0.0.9",
    "applicationinsights": "^1.4.2",
    "axios": "^0.19.0",
