{
  "name": "ia-aip-frontend",
  "description": "Immigration & Asylum appeal frontend",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_PATH=. node build/main.js",
    "build": "webpack --config webpack/webpack.prod.js",
    "dev": "cross-env NODE_ENV=development nodemon app/app.ts",
    "lint": "tslint --project .",
    "test": "yarn test:unit",
    "test:accessibility": "NODE_PATH=. TS_NODE_PROJECT=tsconfig.json NODE_ENV=test USE_REDDIS=false mocha test/accessibility/*.ts --exit",
    "test:unit": "nyc mocha test/unit/**/*.test.ts",
    "test:coverage": "nyc report",
    "test:unit:watch": "mocha --watch-extensions ts --watch test/unit/**/*.test.ts",
    "test:a11y": "yarn test:accessibility",
    "sonar-scan": "sonar-scanner",
    "test:browser": "mocha test/functional/**/*.test.ts --exit",
    "test:smoke": "yarn test:browser -g @smoke",
    "test:functional": "yarn test:browser -g @smoke --invert",
    "test:all": "yarn lint && yarn test && yarn test:a11y && yarn test:smoke && yarn test:functional"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "applicationinsights": "^1.4.2",
    "config": "^3.2.2",
    "connect-redis": "^4.0.3",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^5.2.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "govuk-frontend": "^3.2.0",
    "mini-css-extract-plugin": "^0.8.0",
    "nunjucks": "^3.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "pa11y": "^5.3.0",
    "puppeteer": "^1.20.0",
    "redis": "^2.8.0",
    "webpack": "^4.40.2",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2",
    "http-status-codes": "^1.3.2",
    "i18n": "^0.8.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.3",
    "@types/express": "^4.17.1",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/puppeteer": "^1.6.4",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.3",
    "@types/webpack-dev-middleware": "^2.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "config": "^3.2.2",
    "css-loader": "^3.2.0",
    "husky": "^3.0.8",
    "mocha": "^6.2.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.2",
    "nyc": "^14.1.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "puppeteer": "^1.20.0",
    "sass-loader": "^8.0.0",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "sonar-scanner": "^3.1.0",
    "source-map-support": "^0.5.13",
    "terser-webpack-plugin": "^2.1.2",
    "ts-loader": "^6.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.6.3",
    "webpack-cli": "^3.3.9",
    "webpack-shell-plugin": "^0.5.0"
  }
}
