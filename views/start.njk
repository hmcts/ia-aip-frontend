{% set pageTitleName = i18n.pages.index.title %}
{% extends "layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% import "components/text-components.njk" as text %}

{% block content %}
  <h1 class="govuk-heading-xl">{{ i18n.pages.start.header }}</h1>
  <p class="govuk-body"> {{ i18n.pages.start.description }}</p>
  <p class="govuk-body"><b> {{ i18n.common.requirements.heading }} </b></p>
  {{ text.listItems( i18n.pages.start.requirements ) }}

  {{ govukButton({
    text: i18n.pages.start.startText,
    href: "/eligibility",
    isStartButton: true
  }) }}

{% endblock %}
