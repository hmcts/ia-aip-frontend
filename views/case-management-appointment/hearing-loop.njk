{% set pageTitleName = i18n.pages.hearingLoopPage.pageTitle | eval %}
{% extends "layout.njk" %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/textarea/macro.njk" import govukTextarea %}
{% from "govuk/components/button/macro.njk" import govukButton %}


{% block content %}
    {% if errorList %}
        {{ govukErrorSummary({
            titleText: i18n.validationErrors.errorSummary,
            errorList: errorList
        }) }}
    {% endif %}
    {% call govukFieldset({
        legend: {
            text: i18n.pages.hearingLoopPage.title,
            classes: "govuk-fieldset__legend--l",
            isPageHeading: true
        }
    }) %}
<form action="{{ paths.caseManagementAppointment.hearingLoop }}?_csrf={{ csrfToken }}" method="post" enctype="multipart/form-data" >
    {{ govukRadios({
        idPrefix: "answer",
        id: "answer",
        name: "answer",
        fieldset: {
            legend: {
                text:  '',
                isPageHeading: false,
                classes: "govuk-fieldset__legend--xl"
            }
        },
        hint: {
            html:  i18n.pages.hearingLoopPage.text

        },
        errorMessage: {
            text: errors['answer'].text
        } if errorList,
        items: options
    }) }}
        {{ saveButtons() }}
</form>
    {% endcall %}
    {{ contactUs() }}
{% endblock %}
