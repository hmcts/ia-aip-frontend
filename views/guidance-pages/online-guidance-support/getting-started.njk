{% extends 'guidanceLayout.njk' %}
{% set pageTitleName = i18n.pages.onlineSupportPages.gettingStartedPage.pageTitle %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <img src="/assets/images/banner.png" alt="banner">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <h3 class="govuk-heading-m">{{ i18n.common.contents }}</h3>
                    <ul class="govuk-list">
                        <li>
                            <a href="{{ paths.common.whatIsIt }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.whatIsThisService }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.gettingStarted }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.gettingStarted }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.fourStages }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.fourStages }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.notifications }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.notifications }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.documents }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.documents }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.offlineProcesses }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.offlineProcesses }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.guidance }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.guidance }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.howToHelp }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.howToHelp }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.giveFeedback }}" class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.howToGiveFeedback }}</a>
                        </li>
                    </ul>
                </div>

                <div class="govuk-grid-column-two-thirds">
                    <h2 class="govuk-heading-l">{{ i18n.pages.onlineSupportPages.gettingStartedPage.gettingStartedTitle }}</h2>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.gettingStartedPage.linkToServiceTitle }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.accessText }}</p>
                    <a class="govuk-link" href="{{ i18n.pages.onlineSupportPages.gettingStartedPage.link }}">{{ i18n.pages.onlineSupportPages.gettingStartedPage.link }}</a>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.gettingStartedPage.eligibility }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.eligibilityText }}</p>
                    <ul class="govuk-list govuk-list--bullet">
                        {% for text in i18n.pages.onlineSupportPages.gettingStartedPage.eligibilityBullets %}
                            <li class="govuk-body">{{ text }}</li>
                        {% endfor %}
                    </ul>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.gettingStartedPage.statelessTitle }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.statelessText }}</p>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.gettingStartedPage.creatingAccountTitle }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.creatingAccountText }}</p>
                    <img src="/assets/images/sign-in.png" alt="sign-in">
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.gettingStartedPage.feesTitle }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.feesText }}</p>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.feesTextTwo }}</p>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.feesTextThree }}</p>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.feesTextFour }}</p>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.gettingStartedPage.sessionTimeoutTitle }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.sessionTimeoutText }}</p>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.gettingStartedPage.sessionTimeoutTextTwo }}</p>
                    <img src="/assets/images/session-timeout.png" alt="session-timeout">
                    {{  backForward(paths.common.whatIsIt,paths.common.fourStages) }}


                </div>
            </div>

        </main>
    </div>
{% endblock %}
