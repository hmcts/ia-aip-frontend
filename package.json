    "@types/nunjucks": "^3.1.2",
    "@types/puppeteer": "^1.6.4",
    "@types/sinon": "^7.0.13",
    "@types/sinon-chai": "^3.2.3",
    "@types/webpack-dev-middleware": "^2.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-string": "^1.5.0",
    "concurrently": "^5.0.0",
    "config": "^3.2.2",
