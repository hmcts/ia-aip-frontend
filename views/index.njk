{% set pageTitleName = i18n.pages.index.title %}
{% extends "layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}



{% block content %}
  <h1 class="govuk-heading-m testing-class">Hello World!</h1>

  <p>{{ data }}</p>
<form type="submit" method="post" action="/testPost">
    {{ govukInput({
        label: {
            text: "First Name"
        },
        classes: "govuk-input--width-20",
        id: "firstName",
        name: "firstName"
    }) }}
    {{ govukInput({
        label: {
            text: "Mobile Number"
        },
        classes: "govuk-input--width-20",
        id: "mobileNumber",
        name: "mobileNumber"
    }) }}

    {{ govukButton({
    text: "Save and continue",
    type: "submit"
  }) }}
</form>
{% endblock %}
