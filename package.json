    "helmet": "^3.21.2",
    "http-status-codes": "^1.3.2",
    "i18n": "^0.8.3",
    "jsdom": "^16.2.0",
    "jsdom-global": "^3.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.8.0",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "nunjucks": "^3.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "otp": "^0.1.3",
