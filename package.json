{
  "name": "ia-aip-frontend",
  "description": "Immigration & Asylum appeal frontend",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_PATH=. node build/main.js",
    "build": "webpack --config webpack/webpack.prod.js",
    "dev": "cross-env NODE_ENV=development nodemon app/server.ts",
    "dev:mock": "concurrently \"yarn mock-ccd\" \"yarn mock-idam\" \"IDAM_WEB_URL=http://localhost:20001 IDAM_API_URL=http://localhost:20001 CCD_API_URL=http://localhost:20000 yarn dev\"",
    "mock-ccd": "dyson test/mock/ccd/services/ 20000",
    "mock-idam": "dyson test/mock/idam/services/ 20001",
    "lint": "tslint --project .",
    "test": "yarn test:unit",
    "test:accessibility": "NODE_PATH=. TS_NODE_PROJECT=tsconfig.json NODE_ENV=test USE_REDDIS=false mocha test/accessibility/*.ts --exit",
    "test:unit": "rm -rf test/coverage && nyc mocha test/unit/**/*.test.ts",
    "test:coverage": "nyc report",
    "test:a11y": "yarn test:accessibility",
    "sonar-scan": "sonar-scanner",
    "test:browser": "mocha test/functional/**/*.test.ts --exit",
    "test:smoke": "yarn test:browser -g @smoke",
    "test:functional": "yarn test:browser -g @smoke --invert",
    "test:all": "yarn lint && yarn test && yarn test:a11y && yarn test:smoke && yarn test:functional",
    "codecept:crossbrowser": "codeceptjs run -c codecept.crossbrowser.js",
    "codecept:local": "codeceptjs run -c codecept.local.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "@hmcts/div-idam-express-middleware": "^6.6.0",
    "@hmcts/os-places-client": "1.0.6",
    "applicationinsights": "^1.4.2",
    "axios": "^0.19.0",
    "config": "^3.2.2",
    "connect-redis": "^4.0.3",
    "cookie-parser": "^1.4.4",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^5.2.1",
    "dyson": "^3.0.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "govuk-frontend": "^3.2.0",
    "graceful-fs": "^4.2.2",
    "http-status-codes": "^1.3.2",
    "i18n": "^0.8.3",
    "jsdom": "^15.2.0",
    "jsdom-global": "^3.0.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mini-css-extract-plugin": "^0.8.0",
    "moment": "^2.24.0",
    "multer": "^1.4.2",
    "nunjucks": "^3.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "otp": "^0.1.3",
    "pa11y": "^5.3.0",
    "puppeteer": "^1.20.0",
    "redis": "^2.8.0",
    "request-promise": "^4.2.5",
    "webpack": "^4.41.2",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.3",
    "@types/connect-redis": "^0.0.11",
    "@types/cucumber": "^4.0.7",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.15",
    "@types/joi": "^14.3.3",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/multer": "^1.3.10",
