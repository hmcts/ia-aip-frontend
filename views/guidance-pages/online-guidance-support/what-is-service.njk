{% extends 'guidanceLayout.njk' %}
{% set pageTitleName = i18n.pages.onlineSupportPages.whatIsThisServicePage.pageTitle %}

{% block content %}
    <div class="govuk-width-container">
        <main class="govuk-main-wrapper">
            <img src="/assets/images/banner.png" alt="banner">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-one-third">
                    <h3 class="govuk-heading-m">{{ i18n.common.contents }}</h3>
                    <ul class="govuk-list">
                        <li>
                            <a href="{{ paths.common.whatIsIt }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.whatIsThisService }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.gettingStarted }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.gettingStarted }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.fourStages }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.fourStages }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.notifications }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.notifications }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.documents }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.documents }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.offlineProcesses }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.offlineProcesses }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.guidance }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.guidance }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.howToHelp }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.howToHelp }}</a>
                        </li>
                        <li>
                            <a href="{{ paths.common.giveFeedback }}"
                               class="govuk-link govuk-link--no-visited-state">{{ i18n.pages.onlineSupportPages.links.howToGiveFeedback }}</a>
                        </li>
                    </ul>
                </div>

                <div class="govuk-grid-column-two-thirds">
                    <h2 class="govuk-heading-l">{{ i18n.pages.onlineSupportPages.whatIsThisServicePage.whatIsTheService }}</h2>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.whatIsThisServicePage.whatIsIt }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.whatIsThisServicePage.newService }}</p>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.whatIsThisServicePage.pilotServiceTitle }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.whatIsThisServicePage.pilotServiceText }}</p>
                    <h2 class="govuk-heading-s">{{ i18n.pages.onlineSupportPages.whatIsThisServicePage.whoIsItForTitle }}</h2>
                    <p class="govuk-body">{{ i18n.pages.onlineSupportPages.whatIsThisServicePage.whoIsItForText }}</p>
                    <a href="{{ paths.common.gettingStarted }}"
                       class="govuk-link govuk-link--no-visited-state floater">{{ i18n.common.nextPage }}</a>
                </div>
            </div>

        </main>
    </div>
{% endblock %}
