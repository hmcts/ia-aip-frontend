{% extends '../layout.njk' %}
{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% set pageTitleName = title %}

{% block content %}
    <h1>{{ title }}</h1>
    {% if description %}
        <p>{{ description }}</p>
    {% endif %}
    {% if remittalDocs %}
    {% for doc in remittalDocs %}
      {% if doc.title %}
        <h2 class="govuk-heading-m govuk-!-margin-top-8">{{ doc.title }}</h2>
      {% endif %}
      {{ govukSummaryList({
              rows: doc.summaryRows
          }) }}
     {% endfor %}
    {% endif %}

  {{ contactUs() }}
{% endblock %}
